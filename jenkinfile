 pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh '''npm -v'''
                sh '''pm2 restart index.js'''
            }
          stage('email notifi') {
             steps {  
                sh '''emailext (attachLog: true, body: 'build is stopped', subject: 'build is stopped', to: 'barath.doodleblue@gmail.com')'''
            }
           }
        }
     }
  }
