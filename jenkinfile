 pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh '''npm -v'''
		sh '''pm2 delete index.js'''
                sh '''pm2 start index.js'''
            }
		  }
        stage('email notifi') {
            steps {  
                sh '''emailext (attachLog: true, body: 'build is stopped', subject: 'build is stopped', to: 'barath.doodleblue@gmail.com')'''
            }
          }
        }
     }
